// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MANAGEMENT
// ============================================

model User {
  id                String              @id @default(uuid())
  firstName         String
  lastName          String
  email             String              @unique
  phoneNumber       String?
  experienceField   String?
  aboutYourself     String?
  bio               String?             // Public bio for profile
  avatar            String?             // Avatar image URL
  coverImage        String?             // Profile cover image
  password          String?
  isVerified        Boolean             @default(false)
  role              String              @default("user") // user, admin, moderator

  // Social media
  facebook          String?
  twitter           String?
  instagram         String?
  linkedin          String?
  otherLinks        String?             // JSON array

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  lastLoginAt       DateTime?

  // Relations
  projectTypes       UserProjectType[]
  availability       Availability[]
  verificationTokens VerificationToken[]
  media              Media[]
  articles           Article[]          // Articles created by user
  submissions        Submission[]
  comments           Comment[]
  likes              Like[]
  views              View[]
  collections        Collection[]
  trips              Trip[]
}

model ProjectType {
  id          String            @id @default(uuid())
  name        String            @unique
  description String?
  isActive    Boolean           @default(true)
  order       Int               @default(0)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  users       UserProjectType[]
}

model UserProjectType {
  id            String      @id @default(uuid())
  userId        String
  projectTypeId String
  createdAt     DateTime    @default(now())

  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectType   ProjectType @relation(fields: [projectTypeId], references: [id], onDelete: Cascade)

  @@unique([userId, projectTypeId])
}

model Availability {
  id          String   @id @default(uuid())
  userId      String
  startDate   DateTime
  endDate     DateTime
  startTime   String
  endTime     String
  dayOfWeek   String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id          String   @id @default(uuid())
  userId      String
  token       String   @unique
  type        String   // "registration", "password_reset"
  expiresAt   DateTime
  used        Boolean  @default(false)
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// CONTENT MANAGEMENT
// ============================================

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String    @unique
  description String?
  icon        String?
  color       String?
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  articles    Article[]
  collections Collection[]
  trips       Trip[]
}

model Tag {
  id          String       @id @default(uuid())
  name        String       @unique
  slug        String       @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  articles    ArticleTag[]
}

model Contributor {
  id          String               @id @default(uuid())
  name        String
  slug        String               @unique
  bio         String?
  avatar      String?
  email       String?
  website     String?
  twitter     String?
  isActive    Boolean              @default(true)
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  articles    ArticleContributor[]
}

model Article {
  id              String               @id @default(uuid())
  title           String
  slug            String               @unique
  excerpt         String?

  // Article type: standard, video, audio, gallery
  type            String               @default("standard")

  // Content (JSON string with content blocks)
  content         String?              // JSON: [{ type: 'paragraph', text: '...' }, ...]

  // Media
  heroImage       String?              // Main cover image
  heroVideo       String?              // Video URL
  heroAudio       String?              // Audio URL
  galleryImages   String?              // JSON array of image URLs

  // Audio specific
  audioTitle      String?
  audioDuration   String?

  // Metadata
  label           String?              // "Featured", "Breaking", etc.
  readingTime     String?

  // Status and visibility
  status          String               @default("draft") // draft, published, archived
  isFeatured      Boolean              @default(false)

  // SEO
  metaTitle       String?
  metaDescription String?

  // Stats
  viewCount       Int                  @default(0)
  likeCount       Int                  @default(0)
  commentCount    Int                  @default(0)

  // Sorting
  order           Int                  @default(0)

  // Dates
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  publishedAt     DateTime?

  // Relations
  authorId        String?
  author          User?                @relation(fields: [authorId], references: [id], onDelete: SetNull)

  categoryId      String?
  category        Category?            @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  threadId        String?
  thread          Thread?              @relation(fields: [threadId], references: [id], onDelete: SetNull)

  contributors    ArticleContributor[]
  tags            ArticleTag[]
  media           ArticleMedia[]
  comments        Comment[]
  likes           Like[]
  views           View[]
  collectionItems CollectionItem[]
  tripArticles    TripArticle[]

  @@index([slug])
  @@index([status])
  @@index([type])
  @@index([publishedAt])
}

model ArticleContributor {
  id            String      @id @default(uuid())
  articleId     String
  contributorId String
  role          String      @default("Contributor") // Main Contributor, Contributor, Editor, etc.
  order         Int         @default(0)
  createdAt     DateTime    @default(now())

  article       Article     @relation(fields: [articleId], references: [id], onDelete: Cascade)
  contributor   Contributor @relation(fields: [contributorId], references: [id], onDelete: Cascade)

  @@unique([articleId, contributorId])
}

model ArticleTag {
  id        String   @id @default(uuid())
  articleId String
  tagId     String
  createdAt DateTime @default(now())

  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([articleId, tagId])
}

model ArticleMedia {
  id        String   @id @default(uuid())
  articleId String
  mediaId   String
  order     Int      @default(0)
  caption   String?
  createdAt DateTime @default(now())

  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  media     Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@unique([articleId, mediaId])
}

model Thread {
  id              String    @id @default(uuid())
  title           String
  slug            String    @unique
  description     String?
  readingTime     String?
  totalArticles   Int       @default(0)
  order           Int       @default(0)
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  publishedAt     DateTime?

  articles        Article[]
}

model Collection {
  id              String           @id @default(uuid())
  title           String
  slug            String           @unique
  description     String?
  coverImage      String?
  totalDuration   String?
  order           Int              @default(0)
  isActive        Boolean          @default(true)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  publishedAt     DateTime?

  authorId        String?
  author          User?            @relation(fields: [authorId], references: [id], onDelete: SetNull)

  categoryId      String?
  category        Category?        @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  items           CollectionItem[]
}

model CollectionItem {
  id           String     @id @default(uuid())
  collectionId String
  articleId    String
  order        Int        @default(0)
  createdAt    DateTime   @default(now())

  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  article      Article    @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([collectionId, articleId])
}

model Trip {
  id              String        @id @default(uuid())
  title           String
  slug            String        @unique
  description     String?
  content         String?       // JSON content for detailed description
  coverImage      String?
  heroImage       String?       // Alias for consistency
  location        String?
  coordinates     String?       // JSON: { lat, lng }
  startDate       DateTime?
  endDate         DateTime?
  price           Float?        // Trip price
  groupSize       String?       // e.g., "6-12 people"
  duration        String?       // e.g., "4 nights, 3 days"
  languages       String?       // e.g., "English, Arabic"
  highlights      String?       // JSON array of highlights
  status          String        @default("draft") // draft, published, archived
  order           Int           @default(0)
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  publishedAt     DateTime?

  authorId        String?
  author          User?         @relation(fields: [authorId], references: [id], onDelete: SetNull)

  categoryId      String?
  category        Category?     @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  articles        TripArticle[]

  @@index([slug])
  @@index([status])
}

model TripArticle {
  id        String   @id @default(uuid())
  tripId    String
  articleId String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([tripId, articleId])
}

// ============================================
// MEDIA MANAGEMENT
// ============================================

model Media {
  id        String         @id @default(uuid())
  filename  String
  filepath  String
  url       String         // Public URL
  mimetype  String
  size      Int
  type      String         // image, video, audio, document
  width     Int?
  height    Int?
  duration  Int?           // For video/audio in seconds
  createdAt DateTime       @default(now())

  userId    String
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  articles  ArticleMedia[]
}

// ============================================
// ENGAGEMENT
// ============================================

model Comment {
  id          String    @id @default(uuid())
  content     String
  isApproved  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  articleId   String
  article     Article   @relation(fields: [articleId], references: [id], onDelete: Cascade)

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  parentId    String?
  parent      Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[] @relation("CommentReplies")
}

model Like {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([articleId, userId])
}

model View {
  id        String   @id @default(uuid())
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([articleId])
  @@index([createdAt])
}

// ============================================
// SUBMISSIONS & OPEN CALLS
// ============================================

model Submission {
  id          String   @id @default(uuid())
  title       String
  description String
  content     String?  // JSON content
  mediaUrls   String?  // JSON array of media URLs
  status      String   @default("pending") // pending, approved, rejected
  type        String   // story, testimony, article, media
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reviewedAt  DateTime?

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  openCallId  String?
  openCall    OpenCall? @relation(fields: [openCallId], references: [id], onDelete: SetNull)
}

model OpenCall {
  id           String       @id @default(uuid())
  title        String
  slug         String       @unique
  description  String
  content      String?      // JSON content for detailed description
  requirements String?
  deadline     DateTime?
  heroImage    String?      // Cover image
  status       String       @default("draft") // draft, published, archived
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  publishedAt  DateTime?

  submissions  Submission[]

  @@index([slug])
  @@index([status])
}

// ============================================
// LEGACY (Keep for compatibility)
// ============================================

model Topic {
  id        String   @id @default(uuid())
  name      String
  icon      String?
  color     String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
